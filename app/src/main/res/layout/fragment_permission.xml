<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/montserrat"
        android:text="Aviso!"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_lgdp"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="24dp"
        android:text="A fim de atender a Lei Geral de Produtação de Dados (LGPD), informamos que o uso desse aplicativo é gratuito que o COVID MAP precisará utilizar seus dados de localização para ajudar no mapeamento."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_notice"
        app:layout_constraintTop_toBottomOf="@id/txt_notice" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_lgdp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="5dp"
        android:textAlignment="textStart"
        android:textColor="#939393"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/txt_lgdp"
        app:layout_constraintTop_toBottomOf="@id/txt_lgdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_aceppt_lgdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Concordo que usem meus dados de localização para mapeamento."
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_lgdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox_lgdp"
        app:layout_constraintTop_toTopOf="@+id/checkbox_lgdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_info_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat"
        android:text="A qualquer momento você poderá excluir seus dados do COVID MAP, interrompendo qualquer compartilhamento futuro dos mesmos."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox_lgdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_general_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Termos e Condições Gerais"
        android:textColor="@color/dark_red"
        app:layout_constraintStart_toStartOf="@id/txt_info_data"
        app:layout_constraintTop_toBottomOf="@id/txt_info_data" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_general_terms"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="5dp"
        android:textAlignment="textStart"
        android:textColor="#939393"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/txt_general_terms"
        app:layout_constraintTop_toBottomOf="@id/txt_general_terms"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_aceppt_general_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Li e aceito os termos e condições de uso."
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_general_terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox_general_terms"
        app:layout_constraintTop_toTopOf="@+id/checkbox_general_terms" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish_register"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/bg_buttom_notice"
        android:text="Finalizar registro"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_aceppt_general_terms"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>